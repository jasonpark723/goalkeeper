@section AddToHead{
    <link href="~/css/dashboard.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
}

<div class="main margin-left-250">
    <nav class="nav" style="position: absolute; z-index:1; right:30px;">

    </nav>

    <div class="header bg-gradient-warning pb-8 pt-5 pt-md-8 animsition"
        data-animsition-in-class="fade-in-down"
        data-animsition-in-duration="300"
        data-animsition-out-class="fade-out-up"
        data-animsition-out-duration="300">
        <div class="container-fluid">
            <div class="row" style="margin: 0 auto; height:122px;">


            </div>
        </div>
    </div>

    <div class="container-fluid" style="margin-top: -16rem !important;">
            <!-- Page content -->
            <div class="row" style="margin: 0 auto;">
                <div class="col-xl-12 mb-5 mb-xl-0">
                    <div class="card shadow bg-gradient-secondary animsition"
                        data-animsition-in-class="fade-in-down"
                        data-animsition-in-duration="300"
                        data-animsition-out-class="fade-out-up"
                        data-animsition-out-duration="300">
                        <div class="card-header bg-transparent">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h5 class="text-uppercase text-muted ls-1 mb-1">December 2019 <i class="fas fa-arrow-alt-circle-left"></i> <i class="fas fa-arrow-alt-circle-right"></i></h5>
                                 
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Chart -->
                            <div class="chart" style="positive: relative;">
                                <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
                                    <div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                                        <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
                                    </div>
                                    <div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                                        <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
                                    </div>
                                </div>
                                <canvas id="canvas" style="display: block; height: 534px; width: 1068px;" width="2136" height="1068" class="chartjs-render-monitor"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-5" style="margin: 0 auto;">
                <div class="col-xl-12 mb-5 mb-xl-0">
                    <div class="card shadow animsition" data-animsition-in-class="fade-in-up"
                        data-animsition-in-duration="300"
                        data-animsition-out-class="fade-out-down"
                        data-animsition-out-duration="300">
                        <div class="card-header border-0">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h3 class="mb-0">Expense history</h3>
                                </div>
                                <div class="col text-right">
                                    <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target="#newexpense">New</button>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <!-- Projects table -->
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Amount</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Date</th>
                                        <th scope="col" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @{
                                    foreach(Transaction item in ViewBag.ExpenseHistory)
                                    {
                                    <tr id="@item.TransactionId">
                                        <th scope="row">
                                            @item.Name
                                        </th>
                                        <td>
                                            $@item.Amount
                                        </td>
                                        <td>
                                            @item.Category.Name
                                        </td>
                                        <td>
                                            @item.Date.Date.ToString("MM/dd/yyyy")
                                        </td>
                                        <td class="text-center">
                                            <form >
                                                <a class="delete-expense" href="#" expense-id="@item.TransactionId">Delete</a>
                                            </form>
                                        </td>
                                    </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>



<!-- lg modal -->

<partial name="NewExpensePartial.cshtml" /> 




@section Scripts{
    <script>
        var monthly = @Html.Raw(Json.Serialize(ViewBag.test));
    </script>
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/expense_canvas.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
}


