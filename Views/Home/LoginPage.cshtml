@section AddToHead{
    <link href="~/css/login.css" rel="stylesheet" type="text/css" />
}
@model LoginUser

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="wrapper fadeInDown" style="">
                <div id="formContent">
                    <div class="fadeIn first mt-5">
                        <h4><b>Login here</b></h4>
                    </div>
                    <!-- Login Form -->
                    <form asp-controller="Home" asp-action="LoginUser" method="POST">
                        <span class="text-danger d-inline-block" asp-validation-for="LoginEmail"></span>
                        <input
                            type="email"
                            id="login"
                            class="fadeIn second"
                            asp-for="LoginEmail"
                            placeholder="Email"
                        />
                        <span class="text-danger d-inline-block" asp-validation-for="LoginPassword"></span>
                        <input
                            type="password"
                            id="password"
                            class="fadeIn third"
                            asp-for="LoginPassword"
                            placeholder="Password"
                        />
                    <input type="submit" class="fadeIn fourth" value="Login" />
                    </form>
                    <!-- Remind Passowrd -->
                    <div id="formFooter">
                    Don't have an account?
                    <a class="underlineHover" asp-controller="Home" asp-action="RegisterPage">sign up!</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-5">
            <h3 class="text-center mt-5">where is your money going?</h3>
            <canvas id="piechart1" width="100" height="50"></canvas>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/register_canvas.js"></script>
}

