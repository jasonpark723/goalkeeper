<div class="main margin-left-250">
    <nav class="nav" style="position: absolute; z-index:1; right:30px;">

    </nav>

    <div class="header bg-gradient-success pb-8 pt-5 pt-md-8 animsition"
        data-animsition-in-class="fade-in-down"
        data-animsition-in-duration="300"
        data-animsition-out-class="fade-out-up"
        data-animsition-out-duration="300">
        <div class="container-fluid">
            <div class="row" style="margin: 0 auto; height:122px;">
            </div>
        </div>
    </div>

    <div class="container-fluid" style="margin-top: -16rem !important;">
            <!-- Page content -->
            <div class="row" style="margin: 0 auto;">
                <div class="col-xl-12 mb-5 mb-xl-0">
                    <div class="card shadow bg-gradient-secondary animsition"
                        data-animsition-in-class="fade-in-down"
                        data-animsition-in-duration="300"
                        data-animsition-out-class="fade-out-up"
                        data-animsition-out-duration="300">
                        <div class="card-header bg-transparent">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h4 class="text-uppercase ls-1 mb-1"><span class="text-muted">Calculate your retirement saving:</span>
                                        <span id="summary"></span>
                                    </h4>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-xl-4">
                                    <form id="roth-calculator">
                                        <div class="md-form form mb-2">
                                            <i class="fas fa-dollar-sign prefix"></i>
                                            <input name="starting_balance" type="number" required value="0" min="0" class="form-control form-control">
                                            <label for="starting_balance">Starting Balance</label>
                                        </div>

                                        <div class="md-form form mb-2">
                                            <i class="fas fa-wallet prefix"></i>
                                            <input name="annual_contribution" type="number" required value="5000" max="6000" class="form-control form-control">
                                            <label for="annual_contribution">Annual Contribution</label>
                                        </div>

                                        <div class="md-form form mb-2">
                                            <i class="fas fa-male prefix"></i>
                                            <input name="current_age" type="number" required min="15" max="99" value="25" class="form-control form-control">
                                            <label for="current_age">Current Age</label>
                                        </div>

                                        <div class="md-form form mb-2">
                                            <i class="fas fa-wheelchair prefix"></i>
                                            <input name="retire_age" type="number" required value="65" class="form-control form-control">
                                            <label for="retire_age">Age of retirement</label>
                                        </div>

                                        <div class="md-form form mb-2">
                                            <i class="fas fa-percent prefix"></i>
                                            <input name="rate_of_return" type="number" required value="6" class="form-control form-control">
                                            <label for="rate_of_return">Expected rate of return</label>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary ">Calculate</button>
                                        </div>

                                    </form>
                                </div>
                                <div class="col-xl-8">
                                    <canvas id="roth-chart" width="784" height="512" class="chartjs-render-monitor" style="display: block; height: 256px; width: 392px;"></canvas>
                                </div>
                            </div>


