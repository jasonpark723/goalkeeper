@section AddToHead{
    <link href="~/css/login.css" rel="stylesheet" type="text/css" />
}
@model User

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="wrapper fadeInDown" style="">
                <div id="formContent">
                    <!-- Tabs Titles -->

                    <!-- Icon -->
                    <div class="fadeIn first mt-5">
                        <h4><b>Sign up for Money Manager</b></h4>
                    </div>

                    <!-- Login Form -->
                    <form asp-controller="Home" asp-action="CreateUser" method="POST">
                    <span class="text-danger d-inline-block" asp-validation-for="FirstName"></span>
                    <input
                        type="text"
                        class="fadeIn second"
                        placeholder="First Name"
                        asp-for="FirstName"
                        autofocus
                    />
                    <span class="text-danger d-inline-block" asp-validation-for="LastName"></span>
                    <input
                        type="text"
                        class="fadeIn second"
                        placeholder="Last Name"
                        asp-for="LastName"
                    />
                    <span class="text-danger d-inline-block" asp-validation-for="Email"></span>
                    <input
                        type="email"
                        id="login"
                        class="fadeIn second"
                        asp-for="Email"
                        placeholder="Email"
                    />
                    <span class="text-danger d-inline-block" asp-validation-for="Password"></span>
                    <input
                        type="password"
                        id="password"
                        class="fadeIn third"
                        asp-for="Password"
                        placeholder="Password"
                    />
                    <input
                        type="password"
                        class="fadeIn second"
                        placeholder="Verify Password"
                        asp-for="Confirm"
                    />
                    <input type="submit" class="fadeIn fourth" value="Register" />
                    </form>

                    <!-- Remind Passowrd -->
                    <div id="formFooter">
                    Already have an account?
                    <a class="underlineHover" asp-controller="Home" asp-action="LoginPage">sign in!</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-5">
            <h3 class="text-center mt-5">where is your money going?</h3>
            <canvas id="piechart1" width="100" height="50"></canvas>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/register_canvas.js"></script>
}

