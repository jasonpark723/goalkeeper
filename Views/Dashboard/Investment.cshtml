@section AddToHead{
    <link href="~/css/dashboard.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/investment.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
}

<div class="main margin-left-250">
    <nav class="nav" style="position: absolute; z-index:1; right:30px;">

    </nav>

    <div class="header bg-gradient-info pb-8 pt-5 pt-md-8 animsition"
        data-animsition-in-class="fade-in-down"
        data-animsition-in-duration="300"
        data-animsition-out-class="fade-out-up"
        data-animsition-out-duration="300">
        <div class="container-fluid">
            <div class="row" style="margin: 0 auto; height:122px;">
            </div>
        </div>
    </div>

    <div class="container-fluid" style="margin-top: -16rem !important;">
            <!-- Page content -->
            <div class="row" style="margin: 0 auto;">
                <div class="col-xl-12 mb-5 mb-xl-0">
                    <div class="card shadow bg-gradient-secondary animsition"
                        data-animsition-in-class="fade-in-down"
                        data-animsition-in-duration="300"
                        data-animsition-out-class="fade-out-up"
                        data-animsition-out-duration="300">
                        <div class="card-header bg-transparent">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h4 class="text-uppercase ls-1 mb-1"><span class="text-muted">Stock Profile</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-8">
                                    <div class="chart" style="positive: relative;">
                                        <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
                                            <div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                                                <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
                                            </div>
                                            <div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                                                <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
                                            </div>
                                        </div>
                                        <canvas id="chart-stock" style="display: block; height: 285px; width: 100%;" width="602" height="700" class="chartjs-render-monitor chart-canvas my-5"></canvas>
                                    </div>
                                </div>
                                <div class="col-xl-4" style="height: 500px;">

                                   <div class="stock-name" style="height: 450px; overflow: scroll;">
                                        <div class="loadingio-spinner-pulse-nrey7o4q7t mt-6 text-center">
                                            <span class="text-muted mt-5">fetching data...</span>
                                            <div class="ldio-j7ap79bcqya">
                                                <div></div>
                                                <div></div>
                                                <div></div>
                                            </div>
                                        </div>
                                   </div>
                                   <div class="search-form" style="height: 50px;">
                                       <form>
                                           <div class="md-form form mb-2">
                                                <i class="fab fa-searchengin prefix"></i>
                                                <input id="stock-search" name="stock" type="text" class="form-control form-control">
                                                <label for="stock">search by symbol</label>
                                            </div>
                                       </form>
                                   </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<partial name="NewStockPartial.cshtml" />








@section Scripts{
    <script>
        var allStocks = @Html.Raw(Json.Serialize(ViewBag.allStocks));
    </script>
    <script src="~/js/dashboard.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/js/investment.js"></script>
    <script src="~/js/stock_canvas.js"></script>
}


